{
    "compilerOptions": {
        "strict": true,
        "target": "ES6",            
        "module": "CommonJS",       
        "moduleResolution": "Node",  
        "baseUrl": "src",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "esModuleInterop": true,     
        "skipLibCheck": true         
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}


